# CARE OS requires Node.js to run the backend API
NODE_ENV=development
PORT=3000

# Database - Using SQLite for simplicity (no PostgreSQL setup needed)
DATABASE_URL=sqlite:./care_os.db

# Redis - Optional for state management
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Authentication
JWT_SECRET=care-os-super-secret-key-please-change-in-production-12345
JWT_EXPIRES_IN=24h

# Slack Integration (Optional - add your credentials to enable)
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=
SLACK_APP_TOKEN=
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=

# Microsoft Teams (Optional)
TEAMS_APP_ID=
TEAMS_APP_PASSWORD=
TEAMS_TENANT_ID=

# OpenAI for AI Insights (Optional - add your key to enable)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview

# Google Gemini (Alternative to OpenAI)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-pro

# Ethical Guardrails
ENABLE_GUARDRAILS=true
GUARDRAIL_LOG_LEVEL=verbose

# Deviation Detection
DEVIATION_THRESHOLD_PERCENT=25
DEVIATION_LOOKBACK_DAYS=7

# Check-in Schedule (9 AM weekdays)
CHECKIN_SCHEDULE=0 9 * * 1-5
