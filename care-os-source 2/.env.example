# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/care_os
DB_HOST=localhost
DB_PORT=5432
DB_NAME=care_os
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Redis Configuration (for state management)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_APP_TOKEN=xapp-your-slack-app-token
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret

# Microsoft Teams Integration
TEAMS_APP_ID=your-teams-app-id
TEAMS_APP_PASSWORD=your-teams-app-password
TEAMS_TENANT_ID=your-tenant-id

# OpenAI Configuration (for AI Insights)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# Google Gemini (alternative to OpenAI - uncomment if using)
# GEMINI_API_KEY=your-gemini-api-key
# GEMINI_MODEL=gemini-pro

# Ethical Guardrails Configuration
ENABLE_GUARDRAILS=true
GUARDRAIL_LOG_LEVEL=verbose

# Deviation Detection Settings
DEVIATION_THRESHOLD_PERCENT=25
DEVIATION_LOOKBACK_DAYS=7

# Check-in Schedule (cron format)
CHECKIN_SCHEDULE=0 9 * * 1-5
